{
  // Compiler options for TypeScript
  "compilerOptions": {
    "target": "es5", // Specify ECMAScript target version
    "module": "es6", // Specify module code generation
    "lib": ["es2015", "dom"], // Specify library files to be included in the compilation
    "declaration": true, // Generate .d.ts files from TypeScript files
    "declarationDir": "./dist/types", // Directory for generated declaration files
    "sourceMap": true, // Generate source maps for debugging
    "outDir": "./dist", // Redirect output structure to the specified directory
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true // Enables emit interoperability between CommonJS and ES Modules
  },
  
  // Files to include in the compilation
  "include": ["src"], // Include all TypeScript files in the src directory
  
  // Files to exclude from the compilation
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude node_modules and test files
}